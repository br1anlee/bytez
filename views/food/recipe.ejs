<head>
    <link rel="stylesheet" href="../css/recipe.css">
  </head>
<h3><%= foodId[0].strMeal %></h3>
<img src="<%= foodId[0].strMealThumb %>" alt="">
<p>Instructions: <%= foodId[0].strInstructions %></p>

<p><b>Ingredients</b></p>
<p><%= foodId[0].strMeasure1 + " " + foodId[0].strIngredient1 %></p>
<p><%= foodId[0].strMeasure2 + " " + foodId[0].strIngredient2 %></p>
<p><%= foodId[0].strMeasure3 + " " + foodId[0].strIngredient3 %></p>
<p><%= foodId[0].strMeasure4 + " " + foodId[0].strIngredient4 %></p>
<p><%= foodId[0].strMeasure5 + " " + foodId[0].strIngredient5 %></p>
<p><%= foodId[0].strMeasure6 + " " + foodId[0].strIngredient6 %></p>
<p><%= foodId[0].strMeasure7 + " " + foodId[0].strIngredient7 %></p>
<p><%= foodId[0].strMeasure8 + " " + foodId[0].strIngredient8 %></p>
<p><%= foodId[0].strMeasure9 + " " + foodId[0].strIngredient9 %></p>
<p><%= foodId[0].strMeasure10 + " " + foodId[0].strIngredient10 %></p>
<p><%= foodId[0].strIngredient11 %></p>
<p><%= foodId[0].strIngredient12 %></p>
<p><%= foodId[0].strIngredient13 %></p>


<!-- Adding comments -->
<form action="/search/<%= foodId[0].idMeal %>" method="POST">
    <label for="comment">Add a comment about the recipe!</label>
    <input type="text" name="comment" id="comment">
    <input class="button" type="submit">
</form>



<!-- Favorite Recipe -->
<form method="POST" action="/faves">
    <input hidden name="name" value="<%= foodId[0].strMeal %>">
    <input hidden name="image" value="<%= foodId[0].strMealThumb %>">
    <input class="button " type="submit" value="Favorite this recipe!">
</form>





<a href="/search/<%= foodId[0].idMeal %>/comments">Comments</a>
