<h1>Comments</h1>
<% comment.forEach(element => { %>
    <p><%= element.comment %></p>
    <p><%= element.id %></p>
    <form action="/search/<%=element.recipeId%>/edit" method="GET">
        <input type="submit" value="edit" />
      </form>
    <form action="/search/<%=element.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
      </form>
<% }) %> 


