  <body class="d-flex h-100 text-center text-white bg-dark">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">Bytez</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <div class="nav nav-masthead justify-content-center float-md-end">
        <% if (!user) { %>
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
        <% } else { %>
            <a class="nav-link text-white" href="/faves">My Saved Recipes</a>
            <form action="/search" method="GET" class="nav-link">
                <input type="text" name="i" id="foodSearch" placeholder="Search a recipe">
                <input type="submit">
            </form>
            <a class="nav-link text-white" href="/logout">Logout</a>
       <% } %>
         </div>
      </nav>
    </div>
  </header>

  <main class="px-3">
    <h1>A Cookbook for Success</h1>
    <p class="lead">Yummy In Ma Tummy~ </p>
    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img src="/img/food/spicy-ricecake.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img src="/img/food/kfc.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/img/food/steak.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/img/food/taco.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/img/food/burger.jpeg" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
  </main>

